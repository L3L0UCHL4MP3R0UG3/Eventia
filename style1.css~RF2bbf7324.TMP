*, *:before, *:after{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Nunito', sans-serif;
}

body{
  width: 100%;
  height: 200vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background: -webkit-linear-gradient(left, #8B008B, #B19CD9);
  font-family: 'Nunito', sans-serif;
}

input, button{
  border:none;
  outline: none;
  background: none;
}

.cont{
  overflow: hidden;
  position: relative;
  width: 900px;
  height: 750px;
  background: url(images/banquet.jpg);
  opacity: 0.8;
  background-size: cover;
  background-position: bottom;
  box-shadow: 0 19px 38px rgba(0, 0, 0, 0.30), 0 15px 12px rgba(0, 0, 0, 0.22);
}

.form{
  opacity:1;
  position: relative;
  width: 100%;
  height: 100%;
  padding: 50px 70px;
  
}
h2{
 margin: 0 auto;
 margin-top: 30px;
  display: block;
  width: 260px;
  height: 36px;
  border-radius: 30px;
  font-weight: bold;
  font-family: 'Nunito', sans-serif;
  background: -webkit-linear-gradient(left,#8B008B,#B19CD9);
  font-size: 30px;
  text-align: center;
}
li{
  list-style-type: none;
  }


label{
  display: block;
  width: 500px;
  margin: 25px auto 0;
  background-color: #D943A2;
  border-radius: 5px;
  text-align: center;
}

label span{
  font-size: 14px;
  font-weight: 600;
  color: #fff;
  text-transform: uppercase;
}
label:hover{
  background: -webkit-linear-gradient(left, #D943A2, #32B2D9);
}

input{
  display: block;
  width: 100%;
  margin-top: 5px;
  font-size: 16px;
  padding-bottom: 5px;
  border-bottom: 1px solid rgba(109, 93, 93, 0.4);
  text-align: center;
  font-family: 'Nunito', sans-serif; 
}

button{
  display: block;
  margin: 0 auto;
  width: 260px;
  height: 36px;
  border-radius: 30px;
  color: #000;
  font-size: 15px;
  cursor: pointer;
}
.submit{
  margin-top: 40px;
  margin-bottom: 30px;
  text-transform: uppercase;
  font-weight: 600;
  font-family: 'Nunito', sans-serif;
  background: -webkit-linear-gradient(left,#8B008B,#B19CD9);
}

.submit:hover{
  background: -webkit-linear-gradient(left, #B19CD9, #FF8C00);
}
